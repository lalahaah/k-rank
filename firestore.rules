rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to daily_rankings for everyone
    match /daily_rankings/{document=**} {
      allow read: if true;
      allow write: if false; // Only server can write
    }
    
    // Allow anyone to write to waitlist (for email subscriptions)
    match /waitlist/{document} {
      allow read: if false; // No one can read
      allow create: if request.resource.data.keys().hasAll(['email', 'subscribedAt', 'category'])
                    && request.resource.data.email is string
                    && request.resource.data.email.matches('.*@.*');
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
